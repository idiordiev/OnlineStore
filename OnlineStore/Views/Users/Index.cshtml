@model IEnumerable<OnlineStore.Models.User>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["UsersTitle"];
    Layout = "_Layout";
}

<h2>@Localizer["UsersTitle"]</h2>
<a asp-action="Create" asp-controller="Users">@Localizer["AddUser"]</a>

<table class="table">
    <thead>
    <tr>
        <th>
            @Localizer["Id"]
        </th>
        <th>
            @Localizer["Username"]
        </th>
        <th>
            @Localizer["Email"]
        </th>
        <th>
            @Localizer["FirstName"]
        </th>
        <th>
            @Localizer["LastName"]
        </th>
        <th>
            @Localizer["PhoneNumber"]
        </th>
        <th>
            @Localizer["City"]
        </th>
        <th>
            @Localizer["Address"]
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.PhoneNumber</td>
            <td>@user.City</td>
            <td>@user.Address</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id">@Localizer["Edit"]</a>
                <form method="post" asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id">
                    <input class="btn btn-danger" type="submit" value="@Localizer["Delete"]">
                </form>
            </td>
        </tr>   
    }
    </tbody>
</table>