@model System.Collections.Generic.IList<OnlineStore.Models.LocalizedProduct>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["SearchResults"];
    Layout = "_Layout";
}

<div class="main-container">
    <aside>
        @await Html.PartialAsync("_Sidebar", ViewBag.Categories, null)
    </aside>

    <div class="main-page">
        <h2 class="my-3 mx-5">@Localizer["SearchResults"]</h2>
        
        @if (Model.Count == 0)
        {
            <p>@Localizer["NoSearchResults"]</p>
        }
        else
        {
            @for (int i = 0; i <= Model.Count / 3; i++)
            {
                <div class="goods-row">
                    @for (int j = i * 3; j < i * 3 + 3; j++)
                    {
                        if (j < Model.Count)
                        {
                            @await Html.PartialAsync("_GoodsPost", Model[j])
                        }
                    }
                </div>
            }
        }
    </div>
</div>



