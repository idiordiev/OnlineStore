@model IEnumerable<OnlineStore.Models.Goods>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["GoodsTitle"];
    Layout = "_Layout";
}

<h2>@Localizer["GoodsTitle"]</h2>
<a onclick="showPopup('@Url.Action("Create", "Goods", null, Context.Request.Scheme)','Add goods')">@Localizer["AddGoods"]</a>

<div id="goods-table">
    @await Html.PartialAsync("_GoodsTable", Model)
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        
            <div class="modal-body">
            
            </div>
        </div>
    </div>
</div>
